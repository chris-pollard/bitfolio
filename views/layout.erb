<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bitfolio</title>
  <link rel='stylesheet' href='/stylesheets/main.css'>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<header>
  <h1>Bitfolio</h1>
  <h2>Track your bitcoin portfolio</h2>

  <nav>
    <ul>
      <li><a href="/">Dashboard</a></li>
      <li><a href="/">Add trade</a></li>
      <li><a href="/">Edit trade</a></li>
    </ul>
  </nav>

  <% if logged_in?%>

      <p>logged in as <%= current_user['username'] %></p>
    
      <form action="/sessions" method="post"><input type="hidden" name="_method" value="delete">
      <button>log out</button></form> 

    <% else %>
      <a href="/login">Log in</a> <a href="/signup">Sign up</a>
    <% end %>
</header>

<div class="wrapper">
  <main>

    <%= yield %>

  </main>
  <aside>
    <section class="forex-calculator">
      <h3>Bitcoin price in fiat</h3>
      <form action="">
      <label for="">Currency</label>
      <input type="text">
      <p class="display-forex-result"></p>
      <button>Go</button>
      </form>
    </section>

    <section class="satoshi-calculator">
      <h3>Bitcoin to Satoshis</h3>
      <form action="">
      <label for="">Bitcoin</label>
      <input type="text">
      <p class="display-forex-result"></p>
      <button>Go</button>
      </form>
    </section>
  </aside>
</div>


<footer>

</footer>
</body>
</html>
