


<% if logged_in? %>

    <h1>Bitcoin Portfolio</h1>
    <p>Your current holdings: <span class="bold"><%= amount_total.round(5) %>  BTC</span> worth <span class="bold">$<%= (amount_total.round(5) * session[:usd_price]).round(2) %></span></p>
    <p>Realised Profit: $<%= real_profit %></p>

    <a href="/trades/new">Add trade</a>

    <%# <div class="trade-grid" style="display:grid;grid-template-columns:repeat(6,140px [col-start]);"> %>

    <div class="trade-grid" style="display:grid;grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;">
        <p class="bold left-align">Date</p>
        <p class="bold left-align">Type</p>
        <p class="bold left-align">Amount (BTC)</p>
        <p class="bold right-align">Price ($US)</p>
        <p class="bold right-align">Total ($US)</p>
        <p></p>

        

        <% trades.each do |trade| %>

            <% if current_user()['id'] == trade['user_id']%>
                <p class="left-align"><%= trade['trade_date'] %></p>
                <p class="left-align"><%= trade['trade_type'] %></p>
                <p class="left-align"><%= trade['amount'] %></p>
                <p class="right-align">$<%= trade['price'] %></p>
                <p class="right-align">$<%= trade['total'] %></p>
                <a href="/trades/<%=trade['id']%>/edit"><p>edit</p></a>
            <% end %>

        <% end %>

    </div>

    <a href="/trades/new">Add trade</a>

<% else %>
    <img class="home-logo" src="/resources/logo/logo_transparent.png" alt="">
    <h2>Track your bitcoin</h2>
    <a href="/login">Login</a>
    <a href="/signup">Signup</a>

<% end %>